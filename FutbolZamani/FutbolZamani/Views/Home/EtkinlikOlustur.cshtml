
@{
    ViewBag.Title = "EtkinlikOlustur";
    Layout = "~/Views/Shared/AnaPanel.cshtml";
}

<div class="portlet-body form">
    <form role="form">
        <div class="form-body">
            <div class="row">
                <div class="form-group col-md-6">
                    <label>Email Address</label>
                    <div class="input-group">
                        <span class="input-group-addon">
                            <i class="fa fa-envelope"></i>
                        </span>
                        <input type="text" class="form-control" placeholder="Email Address">
                    </div>
                </div>
                <div class="form-group col-md-6">
                    <label>Etkinlik Kontenjan</label>
                    <div class="input-group">
                        <span class="input-group-addon">
                            <i class="fa fa-group"></i>
                        </span>
                        <input type="number" class="form-control" placeholder="Kontenjan">
                    </div>
                </div>                
            </div>
            <div class="row">
                <div class="form-group col-md-6">
                    <label>İL</label>
                    <div class="input-group">
                        <span class="input-group-addon">
                            <i class="fa fa-home"></i>
                        </span>
                        <input type="text" class="form-control" placeholder="İL">
                    </div>
                </div>
                <div class="form-group col-md-6">
                    <label>İlçe</label>
                    <div class="input-group">
                        <span class="input-group-addon">
                            <i class="fa fa-home"></i>
                        </span>
                        <input type="text" class="form-control" placeholder="İlçe">
                    </div>
                </div>
                
            </div>
            <div class="row">
                <div class="form-group col-md-6">
                    <label>Tarih</label>
                    <div class="input-group">
                        <span class="input-group-addon">
                            <i class="fa fa-calendar"></i>
                        </span>
                        <input type="date" class="form-control" placeholder="Tarih">
                    </div>
                </div>
                <div class="form-group col-md-6">
                    <label>Saat</label>
                    <div class="input-group">
                        <span class="input-group-addon">
                            <i class="fa fa-clock-o"></i>
                        </span>
                        <input type="time" class="form-control" placeholder="Saat">
                    </div>
                </div>
                
                              

            </div>
        </div>
    </form>

            </div>
